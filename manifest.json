{
    "manifest_version": 3,
    "name": "Focus Time Blocker",
    "version": "1.0",
    "description": "Limit time on specific sites/keywords and take forced breaks.",
    "permissions": [
        "storage",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/ICON_16.png"
        }
    },
    "icons": {
        "16": "icons/ICON_16.png"
    }
}